    "servers": [
        {
            "url": "http://localhost:3003/",
            "description": "API de test"
        },
        {
            "url": "https://netlify.desafiotrademaster.com.br",
            "description": "API de produção"
        }
    ],

    "paths": {
        "/entertainment/create":{
            "post":{
                "sumary": "Cadastro de entretenimentos",
                "description": "Essa rota será responsável por cadastrar um novo entretenimento",
                "tags": ["Entertainment"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/Entertainment"
                            },

                            "examples": {
                                "entertainment":{
                                    "value": {
                                        "name": "Homem Aranha",
                                        "entertainmentType_Id": "1"                                    
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "400":{
                       "description": "Entertainment already exists!" 
                    },

                    "200":{
                        "description": "OK",
                        "content":{
                            "aplication/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Entertainment"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "Entertainment":{
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name":{
                        "type":"string"
                    },
                    "entertainmentType_Id":{
                        "type":"number"
                    }
                },
                "required": ["name", "id"]
            },

            "EntertainmentStatus":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"number"
                    },
                    "description":{
                        "type":"string"
                    }
                },
                "required":["description"]
            },

            "EntertainmentType":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"number"
                    },
                    "description":{
                        "type":"string"
                    }
                },
                "required":["description"]
            },

            "EntertainmentOrder":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"number"
                    },
                    "entertainment_Id": {
                        "type":"string"
                    },
                    "entertainmentStatus_Id":{
                        "type":"string"
                    },
                    "rentDays":{
                        "type":"number"
                    }
                },
                "required":["entertainment_Id", "entertainmentStatus_Id", "rentDays"]
            }
        }
    }
}